    <!-- Unfocused and pressed -->
    <item android:state_focused="false"
        android:state_pressed="true"
        android:drawable="@drawable/btn_background_pressed" />

    <!-- Default color -->
    <item android:drawable="@drawable/btn_background_normal" />
</selector>